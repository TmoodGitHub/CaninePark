<% layout('layouts/boilerplate') %>

<div class="row">
  <div class="card shadow p-3 col-md-6 offset-md-3 col-xl-4 offset-xl-4 mb-5">
    <div class="card-body">
      <div class="card-title"><h2>Add a new Dog Park</h2></div>
      <form action="/dogparks" method="POST" novalidate class="validated-form" enctype="multipart/form-data">
        <div class="mb-3">
          <label class="form-label" for="title">Title</label>
          <input class="form-control" type="text" id="title" name="dogpark[title]" required />
          <div class="valid-feedback">Looks good!</div>
        </div>
        <div class="mb-3">
          <label class="form-label" for="location">Location</label>
          <input class="form-control" type="text" id="location" name="dogpark[location]" required />
          <div class="valid-feedback">Looks good!</div>
        </div>
        <div class="mb-3">
          <label for="image" class="form-label">Image(s)</label>
          <input class="form-control" type="file" id="image" name="image" multiple />
        </div>
        <div class="mb-3">
          <label class="form-label" for="price">Dog Park Price</label>
          <div class="input-group">
            <span class="input-group-text" id="price-label">$</span>
            <input
              type="text"
              class="form-control"
              id="price"
              placeholder="0.00"
              aria-label="price"
              aria-describedby="price-label"
              name="dogpark[price]"
              required
            />
          </div>
          <div class="valid-feedback">Looks good!</div>
        </div>

        <div class="mb-3">
          <label class="form-label" for="description">Description</label>
          <textarea
            class="form-control"
            name="dogpark[description]"
            id="description"
            cols="30"
            rows="10"
            required
          ></textarea>
          <div class="valid-feedback">Looks good!</div>
        </div>
        <div class="d-grid gap-2">
          <button class="btn btn-success">Add Dog Park</button>
        </div>
      </form>
      <div>
        <a href="/dogparks">Return to <strong>Dog Parks</strong></a>
      </div>
    </div>
  </div>
</div>
