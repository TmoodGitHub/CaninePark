<% layout('layouts/boilerplate') %>

<div class="container">
  <div class="row">
    <div class="card shadow p-3 col-md-6 offset-md-3 col-xl-4 offset-xl-4">
      <img src="http://puppytoob.com/wp-content/uploads/2013/06/Flying_Dogs_7.jpg" alt="" class="card-img-top" />
      <div class="card-body">
        <div class="card-title"><h2>Login</h2></div>
        <form action="/login" method="post" class="validated-form" novalidate>
          <div class="mb-3">
            <label class="form-label" for="username">Username</label>
            <input class="form-control" type="text" id="username" name="username" required />
            <div class="valid-feedback">Looks good!</div>
          </div>
          <div class="mb-3">
            <label class="form-label" for="password">Password</label>
            <input class="form-control" type="password" id="password" name="password" required />
            <div class="valid-feedback">Looks good!</div>
          </div>
          <div class="d-grid gap-2">
            <button class="btn btn-success">Login</button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
